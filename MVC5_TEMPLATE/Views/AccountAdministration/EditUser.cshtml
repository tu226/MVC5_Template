
@{
    ViewBag.Title = "EditUser";
}

<h2>Edit User</h2>

<form ng-app="app">
    <input type="hidden" name="userid" value="@Model.user.userid" />
    <div>
        <label>Username</label><input type="text" name="username" value="@Model.user.username"/>
    </div>
    <div>
        <label>Roles</label><p ng-repeat="role in roles">@String.Join(" | ",Model.user.roles)</p>
    </div>
    <div>
        <label>Add Role</label>
        <select>
            @foreach (string role in Model.roles) { 
                <option value="@role">@role</option>
            }
        </select>
        <button class="btn btn-default">Add role</button>
    </div>
    <div>
        <button ng-click="submit()" type="submit" class="btn btn-primary" >Save changes</button>
    </div>
</form>

